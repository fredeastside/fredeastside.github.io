@import url('https://fonts.googleapis.com/css?family=PT+Sans:400,700&subset=cyrillic')

base-font = 'PT Sans'
base-font-size = 16px
base-font-color = #565656
base-background-color = #d7cec7
color-tan = #c09f80
title-color = #76323f

page-width = 1280px

body
  font: base-font-size base-font, sans-serif
  color: base-font-color
  margin: 0
  padding: 0

.container
  width: page-width
  margin: 0 auto

.wrapper
  min-height: 600px
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

.header
  display: flex
  height: 100
  flex-direction: row
  align-items: center
  justify-content: flex-start

.logo
  width: 100px
  height: 83px
  margin-left: 20px

.navigation
  background-color: white
  margin: 20px 0
  width: 100%

.navigation__list
  display: flex
  flex-direction: row
  justify-content: flex-end
  margin: 0
  list-style: none
  background-color: white

.navigation__list a
  text-decoration: none
  display: block
  padding: 1em
  color: base-font-color
  &:hover
    color: color-tan
  &.navigation__list_active
    color: color-tan

.movies_list
  width: page-width
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  background-color: base-background-color

.movies_list__item
  display: flex
  flex-direction: row
  justify-content: flex-start
  align-items: flex-start
  width: 100%
  padding-bottom: 20px
  border-bottom: 1px solid color-tan

.movies_list__item-right
  display: flex
  flex-direction: column
  align-content: flex-start
  padding: 20px 40px
  min-height: 250px
  justify-content: space-between
  width: 100%

.movies_list__item-image
  // flex-shrink: 0
  width: 180
  height: 270
  box-shadow: 0 0 30px alpha(#000, 0.5)
  margin: 20px 0 0 20px

.movies_list__item-title
  font-weight: bold
  font-size: 24px
  margin: 0
  color: title-color

.movies_list__item-title-link
  color: title-color
  &:hover
    color: color-tan

.hidden
  display: none

.spinner
  width 50px
  height 50px
  position relative

.double-bounce1, .double-bounce2
  width 100%
  height 100%
  border-radius 50%
  background-color color-tan
  opacity 0.6
  position absolute
  top 0
  left 0
  -webkit-animation sk-bounce 2.0s infinite ease-in-out
  animation sk-bounce 2.0s infinite ease-in-out

.double-bounce2
  -webkit-animation-delay -1.0s
  animation-delay -1.0s

@-webkit-keyframes sk-bounce {
  0%, 100% { -webkit-transform: scale(0.0) }
  50% { -webkit-transform: scale(1.0) }
}

@keyframes sk-bounce {
  0%, 100% {
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  } 50% {
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}

.pagination
  display: flex
  flex-direction: row
  justify-content: center
  margin: 20px 0
  font-size: 12px

.pagination__item
  border: 1px solid title-color
  padding: 2px 5px
  margin: 0px 3px
  cursor: pointer
  &:hover
    border: 1px solid color-tan
    background-color: title-color
    color: white

.pagination__item-active
  background-color: title-color
  color: white
  cursor: default
  &:hover
    border: 1px solid title-color

.search__form
  display: flex
  flex-direction: row
  align-items: center
  margin-left: 50px
  margin: 0
  padding: 0

.search__input
  border: 1px solid color-tan
  height: 35px
  width: 200px
  box-shadow: 0 0 10px alpha(#000, 0.5)
  padding: 0 10px
  border-radius: 4px
  outline: none
  &:hover
    border: 1px solid title-color

.search__button
  background: url('../img/search.svg') no-repeat
  background-size: contain
  width: 25px
  height: 25px
  margin-left: 10px
  cursor: pointer
  border: none;
  outline: none;

.movies_list__item-date
  text-align: right

.footer
  display: flex
  flex-direction: row
  justify-content: center
  align-items: center
  height: 100px
  font-size: 90%
  opacity: 0.5

.not-found
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center

.not-found__code
  font-size: 800%

.movie
  display: flex
  flex-direction: column
  justify-content: flex-start
  align-items: center
  width: 1000px

.movie__title
  color: title-color

.movie__description
  text-indent: 40px
  margin-top: 20px

.movie__rating
  display: flex
  justify-content: flex-start
  align-items: flex-start
  width: 100%

.movie__rating-mark
  font-weight: bold

.lang-switch
  margin-left: 30px

.lang-switch__list
  list-style: none
  display: flex
  flex-direction: row

.lang-switch__list-item img
  width: 30px
  height: 23px
  margin-left: 5px
  border: 1px solid title-color

.movie__comments
  width: 100%
